{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "strict": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types/"
    ],
    "types": [
      "vite/client",
      "vite-svg-loader",
      "vite-plugin-image-presets",
      "jest",
    ],
    "paths": {
      "@/components/*": ["./src/components/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/store/*": ["./src/store/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/img/*": ["./public/images/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "shims-vue.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/*.stories.ts",
    "**/*.spec.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
